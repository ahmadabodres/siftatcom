<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgLogoSignup"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_launcher_foreground"
            app:srcCompat="@drawable/team"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/etUsernameSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="username..."
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/etNameSignup"
            tools:layout_editor_absoluteX="104dp" />

        <EditText
            android:id="@+id/etPasswordSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="password..."
            android:inputType="textPassword"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsernameSignup"
            tools:layout_editor_absoluteX="104dp" />

        <Button
            android:id="@+id/btnSignupSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Signup"
            app:layout_constraintTop_toBottomOf="@+id/ivProfilePhotoSignup"
            tools:layout_editor_absoluteX="160dp" />

        <EditText
            android:id="@+id/etNameSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="name..."
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/imgLogoSignup"
            tools:layout_editor_absoluteX="104dp" />

        <EditText
            android:id="@+id/etAddressSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="address..."
            android:inputType="textPostalAddress"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordSignup"
            tools:layout_editor_absoluteX="103dp" />

        <EditText
            android:id="@+id/etPhoneSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:hint="phone..."
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/etAddressSignup"
            tools:layout_editor_absoluteX="104dp" />

        <Spinner
            android:id="@+id/spUserTypeSignup"
            android:layout_width="244dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etPhoneSignup"
            tools:layout_editor_absoluteX="94dp" />

        <ImageView
            android:id="@+id/ivProfilePhotoSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/spUserTypeSignup"
            tools:layout_editor_absoluteX="141dp"
            tools:src="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>